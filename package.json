{
  "name": "plexlanding",
  "version": "0.0.1",
  "description": "A landing page and user management portal for Plex",
  "main": "index.js",
  "engines": {
    "node": ">=7.10.1"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "precommit": "lint-staged && npm run coverage",
    "lint": "tslint --project tsconfig.json --fix src/**/*",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm test -- --notify --watch",
    "clean:api": "rimraf \"./dist/api\"",
    "prebuild:api": "npm run clean:api",
    "build:api": "tsc --project ./configs/tsconfig.api.json",
    "dev:api": "nodemon src/api/index.ts",
    "dev:api:debug": "nodemon --inspect=5858 src/api/index.ts",
    "coverage": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordond/plexlanding.git"
  },
  "author": "Jordon de Hoog",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jordond/plexlanding/issues"
  },
  "homepage": "https://github.com/jordond/plexlanding#readme",
  "dependencies": {
    "fs-extra": "^5.0.0",
    "hapi": "^16.6.2",
    "jsonfile": "^4.0.0",
    "lodash": "^4.17.4",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.0",
    "@types/hapi": "^16.1.10",
    "@types/jest": "^22.0.0",
    "@types/lodash": "^4.14.77",
    "@types/node": "^8.0.31",
    "@types/winston": "^2.3.6",
    "codecov": "^3.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.5",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^6.0.0",
    "nodemon": "^1.12.1",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.1",
    "ts-node": "^4.0.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.3"
  },
  "lint-staged": {
    "*.{json,css,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "lint",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "restartable": "rs",
    "verbose": false,
    "watch": [
      "src/api"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "execMap": {
      "ts": "ts-node"
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./configs/tsconfig.jest.json"
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage/",
    "coverageReporters": [
      "lcov",
      "html",
      "text-summary"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ]
  }
}
